<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_recycling_facts"
    android:background="#00a651"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/factTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/thousands_of_animals_are_dying_because_of_the_plastic_bags_that_looks_like_jellyfish"
        android:textColor="#fff"
        android:textSize="26sp" />

    <com.twitter.sdk.android.core.identity.TwitterLoginButton
            android:id="@+id/logIn_Twitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/factButton"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/sendTweet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/factButton"
            android:background="#fff"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/tweet_the_fact"
            android:textColor="#45bb7c"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/factButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="#fff"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/give_me_what_you_have"
        android:textColor="#45bb7c"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/recycling_facts_activity_title"
        android:textColor="@android:color/white"
        android:textSize="26sp" />

 </RelativeLayout>
